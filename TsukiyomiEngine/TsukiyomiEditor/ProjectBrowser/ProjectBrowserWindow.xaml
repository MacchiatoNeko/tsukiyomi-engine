<Window x:Class="TsukiyomiEditor.ProjectBrowser.ProjectBrowserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TsukiyomiEditor.ProjectBrowser"
        mc:Ignorable="d"
        Title="ProjectBrowserWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="2.5">
            <ToggleButton Content="Open" Name="openproj" FontSize="24" Margin="5" Click="OnClick"/>
            <ToggleButton Content="New" Name="newproj" FontSize="24" Margin="5" Click="OnClick"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Border Width="800" Background="Gray">
                <TextBlock FontSize="32" Text="Current"></TextBlock>
            </Border>
            <Border Width="800" Background="White">
                <TextBlock FontSize="32" Text="Fresh"></TextBlock>
            </Border>
        </StackPanel>
    </Grid>
</Window>
